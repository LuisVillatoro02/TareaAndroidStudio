<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F1FF"
    tools:context=".ListarProductoList">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#AE4848"
        android:backgroundTint="#AE4848"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Lista de Producto"
            android:textAlignment="center"
            android:textColor="#CAA529"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="145sp"
            android:backgroundTint="#CAA529"
            android:onClick="onClick"
            android:text="Regresar"
            android:textColor="#000000" />

        <ListView
            android:id="@+id/lvListaProducto"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>