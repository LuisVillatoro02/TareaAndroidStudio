<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F1FF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#681C1C"
        android:backgroundTint="#AF4848"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250sp"
            android:fontFamily="monospace"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Registro de Productos"
            android:textAlignment="center"
            android:textColor="#99DFE614"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="McDonald App" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150sp"
                    android:layout_marginRight="150sp"
                    android:backgroundTint="#CBA629"
                    android:fontFamily="sans-serif-smallcaps"
                    android:maxWidth="320sp"
                    android:onClick="onClick"
                    android:shadowColor="#CC1C1C"
                    android:text="Registro General"
                    android:textColor="#000000"
                    app:strokeColor="#DD1E1E" />

                <Button
                    android:id="@+id/btnListarRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150sp"
                    android:layout_marginRight="150sp"
                    android:backgroundTint="#CBA629"
                    android:fontFamily="sans-serif-smallcaps"
                    android:maxWidth="320sp"
                    android:onClick="onClick"
                    android:shadowColor="#CC1C1C"
                    android:text="Recicler View"
                    android:textColor="#000000"
                    app:strokeColor="#DD1E1E" />

                <Button
                    android:id="@+id/btnListar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150sp"
                    android:layout_marginRight="150sp"
                    android:backgroundTint="#CBA629"
                    android:fontFamily="sans-serif-smallcaps"
                    android:maxWidth="320sp"
                    android:onClick="onClick"
                    android:shadowColor="#CC1C1C"
                    android:text="List View"
                    android:textColor="#000000"
                    app:strokeColor="#DD1E1E" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>